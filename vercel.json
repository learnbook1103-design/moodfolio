{
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": "nextjs",
    "outputDirectory": ".next",
    "regions": [
        "icn1"
    ],
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/chat",
            "destination": "/api/index.py"
        },
        {
            "source": "/login",
            "destination": "/api/index.py"
        },
        {
            "source": "/signup",
            "destination": "/api/index.py"
        },
        {
            "source": "/start-social-login",
            "destination": "/api/index.py"
        },
        {
            "source": "/google-login",
            "destination": "/api/index.py"
        },
        {
            "source": "/kakao-login",
            "destination": "/api/index.py"
        },
        {
            "source": "/naver-login",
            "destination": "/api/index.py"
        },
        {
            "source": "/submit",
            "destination": "/api/index.py"
        },
        {
            "source": "/save-portfolio",
            "destination": "/api/index.py"
        },
        {
            "source": "/get-portfolio/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/generate-chat-answers",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/parse-resume",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/analyze-resume",
            "destination": "/api/index.py"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}